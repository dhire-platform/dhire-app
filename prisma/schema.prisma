generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "mongodb"
  url      = "mongodb+srv://admin:nShbzrA4l6q0IhWs@dhire.orz9clr.mongodb.net/platform?ssl=true&connectTimeoutMS=5000&maxPoolSize=50"
